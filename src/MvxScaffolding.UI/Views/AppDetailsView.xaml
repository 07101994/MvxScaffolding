<UserControl x:Class="MvxScaffolding.UI.Views.AppDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MvxScaffolding.UI.Views"
             xmlns:dialogs="clr-namespace:MvxScaffolding.UI.ViewModels.Dialogs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="{DynamicResource MaterialDesignPaper}"
             d:DesignHeight="700" d:DesignWidth="950">

    <UserControl.Resources>
        <ResourceDictionary Source="/MvxScaffolding.UI;component/Styles/MvxScaffoldingTheme.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromLeft, Duration=0:0:1}">
            <materialDesign:Card Margin="16" Width="350" VerticalAlignment="Center" HorizontalAlignment="Right">
                <StackPanel>
                    <materialDesign:ColorZone Mode="{Binding IsNativeTemplate, Converter={StaticResource ActiveColorZoneModeConverter}}" VerticalAlignment="Stretch">
                        <Grid Margin="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="../Resources/Images/mvxscaffolding_logo_transparent.png" Height="100" Width="100" Stretch="Uniform" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8">
                                <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}" >MvxScaffolding</TextBlock>
                                <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}" Text="{Binding TemplateTypeName}"/>
                                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}" Text="{Binding AppVersion, StringFormat={}v{0}}"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:ColorZone>
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Grid.ColumnSpan="2"
                                   Margin="0 0 0 8"
                                   VerticalAlignment="Top">MvxScaffolding GitHub Star button</TextBlock>

                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Grid.Row="1"
                                HorizontalAlignment="Stretch"
                                Command="{Binding GoToGitHubCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="GithubCircle" VerticalAlignment="Center"/>
                                <TextBlock Margin="6 0 0 0" VerticalAlignment="Center">GitHub</TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                Command="{Binding GoToGitHubPrivacyPolicyCommand}">
                            <StackPanel Orientation="Horizontal" >
                                <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center"/>
                                <TextBlock Margin="6 0 0 0" VerticalAlignment="Center">Privacy Policy</TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Center"
                                Command="{Binding AboutCommand}">
                            <StackPanel Orientation="Horizontal" >
                                <materialDesign:PackIcon Kind="Information" VerticalAlignment="Center"/>
                                <TextBlock Margin="6 0 0 0" VerticalAlignment="Center">About</TextBlock>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
        </materialDesign:TransitioningContent>

        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight, Duration=0:0:1.2}" Grid.Column="1">
            <materialDesign:Card Margin="16" Width="400" HorizontalAlignment="Left" VerticalAlignment="Center">
                <StackPanel Margin="16">
                    <TextBlock FontWeight="Bold" >Application</TextBlock>
                    <TextBox materialDesign:HintAssist.Hint="Identifier"
                             materialDesign:HintAssist.IsFloating="True"
                             Margin="0 4 0 0"
                             Text="{Binding Options.AppName}"></TextBox>
                    <TextBox materialDesign:HintAssist.Hint="Display Name"
                             materialDesign:HintAssist.IsFloating="True"
                             Margin="0 4 0 0"
                             Text="{Binding Options.AppId}"></TextBox>
                    <TextBlock FontWeight="Bold" Margin="0 16 0 0">Solution</TextBlock>
                    <DockPanel Grid.Row="0"
                               Margin="0 4 0 0"
                               HorizontalAlignment="Stretch">
                        <ComboBox
                              materialDesign:HintAssist.Hint="Project Grouping"
                              ItemsSource="{Binding Options.ProjectGroupingOptions}"
                              SelectedValue="{Binding Options.SelectedProjectGrouping}"
                              SelectedValuePath="Key"
                              DisplayMemberPath="Value"
                              Width="300"
                              materialDesign:ComboBoxAssist.ClassicMode="true"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>
                        <TextBlock HorizontalAlignment="Right" Margin="0 8 0 0">
                            <Hyperlink Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                       TextDecorations="None"
                                   Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">
                            <Hyperlink.CommandParameter>
                                <dialogs:SimpleInfoViewModel Title="Project Grouping"
                                                             Message="The grouping for projects into folders inside of the solution.&#x0a;&#x0a;• Select &quot;Flat&quot; for when you want all projects to be placed at the root of the solution.&#x0a;&#x0a;• Select &quot;Test Group&quot; for when you want all test projects to be placed in a test folder, other projects are placed at the root of the solution.&#x0a;&#x0a;• Select &quot;Platform&quot; if you want projects to be grouped based on their target platform."/>
                            </Hyperlink.CommandParameter>
                            <materialDesign:PackIcon Kind="Information"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Right"
                                                     Height="20"
                                                     Width="20"/>
                            </Hyperlink>
                        </TextBlock>
                    </DockPanel>
                    <DockPanel Grid.Row="1"
                                Margin="0 12 0 8"
                                HorizontalAlignment="Stretch">
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Width="260">EditorConfig
                        </TextBlock>
                        <ToggleButton Margin="8 0 0 0"
                                      IsChecked="{Binding Options.HasEditorConfig}"
                                      HorizontalAlignment="Right"/>

                        <TextBlock HorizontalAlignment="Right">
                            <Hyperlink Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                       TextDecorations="None"
                                       Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">
                            <Hyperlink.CommandParameter>
                                <dialogs:SimpleInfoViewModel Title="EditorConfig"
                                                             Message="Enable to include an EditorConfig file at the root of the solution. EditorConfig is used to define coding styles enforced within Visual Studio."
                                                             ReadMoreLink="https://docs.microsoft.com/en-us/visualstudio/ide/create-portable-custom-editor-options"/>
                            </Hyperlink.CommandParameter>
                            <materialDesign:PackIcon Kind="Information"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Right"
                                                     Height="20"
                                                     Width="20"/>
                            </Hyperlink>
                        </TextBlock>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>
        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>
