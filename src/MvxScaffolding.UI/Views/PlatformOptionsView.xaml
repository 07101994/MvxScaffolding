<UserControl
    x:Class="MvxScaffolding.UI.Views.PlatformOptionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:MvxScaffolding.UI.ViewModels.Dialogs"
    xmlns:local="clr-namespace:MvxScaffolding.UI.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="950"
    Background="{DynamicResource MaterialDesignPaper}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/MvxScaffolding.UI;component/Styles/MvxScaffoldingTheme.xaml" />
    </UserControl.Resources>

    <ItemsControl>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Columns="4" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight, Duration=0:0:1.2}">
            <materialDesign:Card
                Width="230"
                Margin="8"
                HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <materialDesign:ColorZone VerticalAlignment="Stretch" Mode="PrimaryMid">
                        <Image
                            Width="196"
                            Height="140"
                            Source="../Resources/Images/mvxscaffolding_logo_transparent.png"
                            Stretch="Uniform" />
                    </materialDesign:ColorZone>
                    <StackPanel Grid.Row="1" Margin="8,24,8,0">
                        <TextBlock FontWeight="Medium" Style="{StaticResource MaterialDesignSubheadingTextBlock}">Core</TextBlock>
                    </StackPanel>
                    <Grid
                        Grid.Row="2"
                        Height="180"
                        Margin="8"
                        HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ComboBox
                            Grid.Row="0"
                            Margin="0,4,0,0"
                            materialDesign:ComboBoxAssist.ClassicMode="true"
                            materialDesign:HintAssist.Hint=".NET Standard"
                            DisplayMemberPath="Value"
                            ItemsSource="{Binding Options.NetStandardOptions}"
                            SelectedValue="{Binding Options.SelectedNetStandard}"
                            SelectedValuePath="Key"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>
                        <DockPanel
                            Grid.Row="1"
                            Margin="0,12,0,8"
                            HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">Unit Test Project</TextBlock>
                            <ToggleButton
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Options.HasCoreUnitTestProject}" />
                        </DockPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </materialDesign:TransitioningContent>

        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight, Duration=0:0:1.2}" OpeningEffectsOffset="{materialDesign:IndexedItemOffsetMultiplier 0:0:0.1}">
            <materialDesign:Card
                Width="230"
                Margin="8"
                HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <materialDesign:ColorZone VerticalAlignment="Stretch" Mode="{Binding Options.HasAndroid, Converter={StaticResource ActiveColorZoneModeConverter}}">
                        <materialDesign:PackIcon
                            Width="128"
                            Height="128"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="Android" />
                    </materialDesign:ColorZone>
                    <Button
                        Grid.Row="0"
                        Margin="0,0,16,-20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Command="{Binding ToggleAndroidCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Options.HasAndroid}" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentHueColorBrush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentHueColorBrush}" />
                                        <Setter Property="Foreground" Value="{DynamicResource AccentHueColorForegroundBrush}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Options.HasAndroid}" Value="False">
                                        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}" />
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <materialDesign:PackIcon Kind="{Binding Options.AndroidIncludeIcon}" />
                    </Button>
                    <StackPanel Grid.Row="1" Margin="8,24,8,0">
                        <TextBlock FontWeight="Medium" Style="{StaticResource MaterialDesignSubheadingTextBlock}">Android</TextBlock>
                    </StackPanel>
                    <Grid
                        Grid.Row="2"
                        Height="180"
                        Margin="8"
                        HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ComboBox
                            Grid.Row="0"
                            Margin="0,4,0,0"
                            materialDesign:ComboBoxAssist.ClassicMode="true"
                            materialDesign:HintAssist.Hint="Min SDK version"
                            DisplayMemberPath="Value"
                            IsEnabled="{Binding Options.HasAndroid}"
                            ItemsSource="{Binding Options.MinAndroidSDKOptions}"
                            SelectedValue="{Binding Options.SelectedMinAndroidSDK}"
                            SelectedValuePath="Key"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>
                        <DockPanel
                            Grid.Row="1"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Hyperlink
                                    Cursor="Arrow"
                                    IsEnabled="{Binding Options.HasAndroid}"
                                    Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                    TextDecorations="None">
                                    Unit Test Project
                                </Hyperlink>
                            </TextBlock>
                            <ToggleButton
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Options.HasAndroidUnitTestProject}"
                                IsEnabled="{Binding Options.HasAndroid}" />
                        </DockPanel>
                        <DockPanel
                            Grid.Row="2"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Hyperlink
                                    Cursor="Arrow"
                                    IsEnabled="{Binding Options.HasAndroid}"
                                    Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                    TextDecorations="None">
                                    UI Test Project
                                </Hyperlink>
                            </TextBlock>
                            <ToggleButton
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Options.HasAndroidUiTestProject}"
                                IsEnabled="{Binding Options.HasAndroid}" />
                        </DockPanel>
                        <DockPanel
                            Grid.Row="3"
                            Margin="0,12,0,8"
                            HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Hyperlink
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                    IsEnabled="{Binding Options.HasAndroid}"
                                    Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                    TextDecorations="None">
                                    <Hyperlink.CommandParameter>
                                        <dialogs:SimpleInfoViewModel Title="XML Layouts" Message="Enable to use XML layouts instead of Xamarin default AXML layouts." />
                                    </Hyperlink.CommandParameter>
                                    XML Layouts
                                    <materialDesign:PackIcon
                                        Margin="4,0"
                                        VerticalAlignment="Center"
                                        Kind="InformationOutline" />
                                </Hyperlink>
                            </TextBlock>
                            <ToggleButton
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Options.HasAndroidXml}"
                                IsEnabled="{Binding Options.HasAndroid}" />
                        </DockPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </materialDesign:TransitioningContent>

        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight, Duration=0:0:1.2}" OpeningEffectsOffset="{materialDesign:IndexedItemOffsetMultiplier 0:0:0.1}">
            <materialDesign:Card
                Width="230"
                Margin="8"
                HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <materialDesign:ColorZone VerticalAlignment="Stretch" Mode="{Binding Options.HasIos, Converter={StaticResource ActiveColorZoneModeConverter}}">
                        <materialDesign:PackIcon
                            Width="128"
                            Height="128"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="Apple" />
                    </materialDesign:ColorZone>
                    <Button
                        Grid.Row="0"
                        Margin="0,0,16,-20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Command="{Binding ToggleIosCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Options.HasIos}" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentHueColorBrush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentHueColorBrush}" />
                                        <Setter Property="Foreground" Value="{DynamicResource AccentHueColorForegroundBrush}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Options.HasIos}" Value="False">
                                        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}" />
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <materialDesign:PackIcon Kind="{Binding Options.IosIncludeIcon}" />
                    </Button>
                    <StackPanel Grid.Row="1" Margin="8,24,8,0">
                        <TextBlock FontWeight="Medium" Style="{StaticResource MaterialDesignSubheadingTextBlock}">iOS</TextBlock>
                    </StackPanel>
                    <Grid
                        Grid.Row="2"
                        Height="180"
                        Margin="8"
                        HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ComboBox
                            Grid.Row="0"
                            Margin="0,4,0,0"
                            materialDesign:ComboBoxAssist.ClassicMode="true"
                            materialDesign:HintAssist.Hint="Min SDK version"
                            DisplayMemberPath="Value"
                            IsEnabled="{Binding Options.HasIos}"
                            ItemsSource="{Binding Options.MinIosSDKOptions}"
                            SelectedValue="{Binding Options.SelectedMinIosSDK}"
                            SelectedValuePath="Key"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>
                        <DockPanel
                            Grid.Row="1"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Hyperlink
                                    Cursor="Arrow"
                                    IsEnabled="{Binding Options.HasIos}"
                                    Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                    TextDecorations="None">
                                    Unit Test Project
                                </Hyperlink>
                            </TextBlock>
                            <ToggleButton
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Options.HasIosUnitTestProject}"
                                IsEnabled="{Binding Options.HasIos}" />
                        </DockPanel>
                        <DockPanel
                            Grid.Row="2"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Hyperlink
                                    Cursor="Arrow"
                                    IsEnabled="{Binding Options.HasIos}"
                                    Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                    TextDecorations="None">
                                    UI Test Project
                                </Hyperlink>
                            </TextBlock>
                            <ToggleButton
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Options.HasIosUiTestProject}"
                                IsEnabled="{Binding Options.HasIos}" />
                        </DockPanel>
                        <DockPanel
                            Grid.Row="3"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Hyperlink
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                    IsEnabled="{Binding Options.HasIos}"
                                    Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                    TextDecorations="None">
                                    <Hyperlink.CommandParameter>
                                        <dialogs:SimpleInfoViewModel
                                            Title="Fluent Layouts"
                                            Message="Enable to include FluentLayout, a fluent API for creating constraint-based layouts."
                                            ReadMoreLink="https://github.com/FluentLayout/Cirrious.FluentLayout" />
                                    </Hyperlink.CommandParameter>
                                    Fluent Layouts
                                    <materialDesign:PackIcon
                                        Margin="4,0"
                                        VerticalAlignment="Center"
                                        Kind="InformationOutline" />
                                </Hyperlink>
                            </TextBlock>
                            <ToggleButton
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Options.HasIosFluentLayout}"
                                IsEnabled="{Binding Options.HasIos}" />
                        </DockPanel>
                        <DockPanel
                            Grid.Row="4"
                            Margin="0,12,0,8"
                            HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Hyperlink
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                    IsEnabled="{Binding Options.HasIos}"
                                    Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                    TextDecorations="None">
                                    <Hyperlink.CommandParameter>
                                        <dialogs:SimpleInfoViewModel
                                            Title="Hyperion"
                                            Message="Enable to include Hyperion, an in app design review tool."
                                            ReadMoreLink="https://github.com/willowtreeapps/Hyperion-iOS" />
                                    </Hyperlink.CommandParameter>
                                    Hyperion
                                    <materialDesign:PackIcon
                                        Margin="4,0"
                                        VerticalAlignment="Center"
                                        Kind="InformationOutline" />
                                </Hyperlink>
                            </TextBlock>

                            <ToggleButton
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Options.HasIosHyperion}"
                                IsEnabled="{Binding Options.HasIos}" />
                        </DockPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </materialDesign:TransitioningContent>

        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight, Duration=0:0:1.2}" OpeningEffectsOffset="{materialDesign:IndexedItemOffsetMultiplier 0:0:0.1}">
            <materialDesign:Card
                Width="230"
                Margin="8"
                HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <materialDesign:ColorZone VerticalAlignment="Stretch" Mode="{Binding Options.HasUwp, Converter={StaticResource ActiveColorZoneModeConverter}}">
                        <materialDesign:PackIcon
                            Width="128"
                            Height="128"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="Windows" />
                    </materialDesign:ColorZone>
                    <Button
                        Grid.Row="0"
                        Margin="0,0,16,-20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Command="{Binding ToggleUwpCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Options.HasUwp}" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentHueColorBrush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentHueColorBrush}" />
                                        <Setter Property="Foreground" Value="{DynamicResource AccentHueColorForegroundBrush}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Options.HasUwp}" Value="False">
                                        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}" />
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <materialDesign:PackIcon Kind="{Binding Options.UwpIncludeIcon}" />
                    </Button>
                    <StackPanel Grid.Row="1" Margin="8,24,8,0">
                        <TextBlock FontWeight="Medium" Style="{StaticResource MaterialDesignSubheadingTextBlock}">Windows</TextBlock>
                    </StackPanel>
                    <Grid
                        Grid.Row="2"
                        Height="180"
                        Margin="8"
                        HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBox
                            Margin="0,4,0,0"
                            materialDesign:HintAssist.Hint="Description"
                            materialDesign:HintAssist.IsFloating="True"
                            IsEnabled="{Binding Options.HasUwp}"
                            Text="{Binding Options.UwpDescription}" />
                        <ComboBox
                            Grid.Row="1"
                            Margin="0,4,0,0"
                            materialDesign:ComboBoxAssist.ClassicMode="true"
                            materialDesign:HintAssist.Hint="Min SDK version"
                            DisplayMemberPath="Value"
                            IsEnabled="{Binding Options.HasUwp}"
                            ItemsSource="{Binding Options.MinUwpSDKOptions}"
                            SelectedValue="{Binding Options.SelectedMinUwpSDK}"
                            SelectedValuePath="Key"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>
                        <DockPanel
                            Grid.Row="2"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Hyperlink
                                    Cursor="Arrow"
                                    IsEnabled="{Binding Options.HasUwp}"
                                    Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                    TextDecorations="None">
                                    Unit Test Project
                                </Hyperlink>
                            </TextBlock>
                            <ToggleButton
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Options.HasUwpUnitTestProject}"
                                IsEnabled="{Binding Options.HasUwp}" />
                        </DockPanel>
                        <DockPanel
                            Grid.Row="3"
                            Margin="0,12,0,8"
                            HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Hyperlink
                                    Cursor="Arrow"
                                    IsEnabled="{Binding Options.HasUwp}"
                                    Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                    TextDecorations="None">
                                    UI Test Project
                                </Hyperlink>
                            </TextBlock>
                            <ToggleButton
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding Options.HasUwpUiTestProject}"
                                IsEnabled="{Binding Options.HasUwp}" />
                        </DockPanel>
                    </Grid>

                </Grid>
            </materialDesign:Card>
        </materialDesign:TransitioningContent>
    </ItemsControl>
</UserControl>
