    /*
    || iOS project flags
    =========================================================================================== */
    "iOSMinSDKVersion": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "10.0",
      "description": "Minimum iOS SDK version.",
      "choices": [
        {
          "choice": "11.2",
          "description": "iOS 11.2"
        },
        {
          "choice": "11.1",
