{
  "$schema": "http://json.schemastore.org/template",
  "author": "Plac3hold3r",
  "classifications": [ "Xamarin", "Xamarin Forms", "MvvmCross" ],
  "description": "A customizable template used to scaffold a cross platform MvvmCross application with Xamarin Forms.",
  "name": "MvxScaffolding MvvmCross Forms",
  "defaultName": "MyMvvmCrossApp",
  "identity": "MvxScaffolding.Forms",
  "groupIdentity": "MvxScaffolding.Forms",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "shortName": "mvxforms",
  "sourceName": "MvxFormsTemp",
  "preferNameDirectory": true,
  "guids": [
    "{E02AD468-057C-4CC0-8B50-F664FD5A031D}", // Core Project
    "{B816CFD1-B3F7-4188-986F-402CC93A09EC}", // Android Project
    "{3444E7FD-035D-4DEF-AD46-5E679938589F}", // iOS Project
    "{C387803D-EAD4-417E-A1FE-A8F81A79ADEA}", // UWP Project
    "{66D2862F-628D-48C3-AC12-993BECA41132}" // Solution items
  ],
  "primaryOutputs": [
    {
      "path": "src\\MvxFormsTemp.Core\\MvxFormsTemp.Core.csproj"
    },
    {
      "condition": "(HasAndroidProject)",
      "path": "src\\MvxFormsTemp.Droid\\MvxFormsTemp.Droid.csproj"
    },
    {
      "condition": "(HasiOSProject)",
      "path": "src\\MvxFormsTemp.iOS\\MvxFormsTemp.iOS.csproj"
    },
    {
      "condition": "(HasUWPProject)",
      "path": "src\\MvxFormsTemp.UWP\\MvxFormsTemp.UWP.csproj"
    }
  ],
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!HasAndroidProject)",
          "exclude": [
            "src/MvxFormsTemp.Droid/**"
          ]
        },
        {
          "condition": "(!HasiOSProject)",
          "exclude": [
            "src/MvxFormsTemp.iOS/**"
          ]
        },
        {
          "condition": "(!HasUWPProject)",
          "exclude": [
            "src/MvxFormsTemp.UWP/**"
          ]
        },
        {
          "condition": "(!HasEditorConfig)",
          "exclude": [
            "editor.config"
          ]
        },
        {
          "condition": "(HasEditorConfig)",
          "rename": {
            "editor.config": ".editorconfig"
          }
        }
      ]
    }
  ],
  "symbols": {
    /*
    || Project include flags
    =========================================================================================== */
    "HasAndroidProject": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to include Xamarin Android Project."
    },
    "HasiOSProject": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to include Xamarin iOS Project."
    },
    "HasUWPProject": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to include UWP Project."
    },
    "HasEditorConfig": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to include an editor config in the root directory."
    },
    /*
    || All project flags
    =========================================================================================== */
    "AppId": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "com.mvxscaffolding.app",
      "description": "The Android package name or iOS bundle Id <com.company.appname>.",
      "replaces": "com.mvxscaffolding.app",
      "onlyIf": [
        {
          "after": "<string>",
          "before": "</string>"
        },
        {
          "after": "package=\""
        }
      ]
    },
    "AppName": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "Mvx Scaffolding",
      "replaces": "APP_NAME",
      "description": "The application display name."
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    /*
    || Core project flags
    =========================================================================================== */
    "NETStandardVersion": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "2.0",
      "description": "The version of .NET Standard to use in the Core project.",
      "choices": [
        {
          "choice": "2.0",
          "description": ".NET Standard 2.0"
        },
        {
          "choice": "1.6",
          "description": ".NET Standard 1.6"
        },
        {
          "choice": "1.5",
          "description": ".NET Standard 1.5"
        },
        {
          "choice": "1.4",
          "description": ".NET Standard 1.4"
        }
      ],
      "replaces": "2.0",
      "onlyIf": [
        {
          "after": "netstandard"
        }
      ]
    },
    /*
    || Android project flags
    =========================================================================================== */
    "AndroidMinSDKVersion": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "19",
      "description": "Minimum Android target SDK version.",
      "choices": [
        {
          "choice": "26",
          "description": "Android 8 - Oreo v26"
        },
        {
          "choice": "25",
          "description": "Android 7.1 - Nougat v25"
        },
        {
          "choice": "24",
          "description": "Android 7 - Nougat v24"
        },
        {
          "choice": "23",
          "description": "Android 6 - Marshmallow v23"
        },
        {
          "choice": "22",
          "description": "Android 5.1 - Lollipop v22"
        },
        {
          "choice": "21",
          "description": "Android 5 - Lollipop v21"
        },
        {
          "choice": "19",
          "description": "Android 4 - KitKat v19"
        },
        {
          "choice": "18",
          "description": "Android 4.3 - Jelly Bean v18"
        },
        {
          "choice": "17",
          "description": "Android 4.2 - Jelly Bean v17"
        },
        {
          "choice": "16",
          "description": "Android 4.1 - Jelly Bean v16"
        },
        {
          "choice": "15",
          "description": "Android 4.0.3 - Ice Cream Sandwich v15"
        },
        {
          "choice": "14",
          "description": "Android 4 - Ice Cream Sandwich v14"
        }
      ],
      "replaces": "19",
      "onlyIf": [
        {
          "after": "android:minSdkVersion=\""
        }
      ]
    },
    /*
    || iOS project flags
    =========================================================================================== */
    "iOSMinSDKVersion": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "10.0",
      "description": "Minimum iOS target SDK version.",
      "choices": [
        {
          "choice": "11.2",
          "description": "iOS 11.2"
        },
        {
          "choice": "11.1",
          "description": "iOS 11.1"
        },
        {
          "choice": "11.0",
          "description": "iOS 11"
        },
        {
          "choice": "10.3",
          "description": "iOS 10.3"
        },
        {
          "choice": "10.2",
          "description": "iOS 10.2"
        },
        {
          "choice": "10.1",
          "description": "iOS 10.1"
        },
        {
          "choice": "10.0",
          "description": "iOS 10"
        },
        {
          "choice": "9.3",
          "description": "iOS 9.3"
        },
        {
          "choice": "9.2",
          "description": "iOS 9.2"
        },
        {
          "choice": "9.1",
          "description": "iOS 9.1"
        },
        {
          "choice": "9.0",
          "description": "iOS 9"
        }
      ],
      "replaces": "10.0",
      "onlyIf": [
        {
          "after": "<string>",
          "before": "</string>"
        }
      ]
    },
    /*
    || UWP project flags
    =========================================================================================== */
    "UWPAppDescription": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "Laying the foundation with Mvx Scaffolding",
      "replaces": "UWP_APP_DESCRIPTION",
      "description": "The UWP application description."
    },
    "UWPMinSDKVersion": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "10.0.16299.0",
      "description": "Minimum UWP target SDK version.",
      "choices": [
        {
          "choice": "10.0.16299.0",
          "description": "Fall Creators Update - build 16299"
        },
        {
          "choice": "10.0.15063.0",
          "description": "Creators Update - build 15063"
        },
        {
          "choice": "10.0.14393.0",
          "description": "Anniversary Update - build 14393"
        },
        {
          "choice": "10.0.10586.0",
          "description": "November Update - build 10586"
        },
        {
          "choice": "10.0.10240.0",
          "description": "RTM - build 10240"
        }
      ],
      "replaces": "10.0.16299.0",
      "onlyIf": [
        {
          "after": "<TargetPlatformMinVersion>",
          "before": "</TargetPlatformMinVersion>"
        }
      ]
    }
  } //,
