<metro:MetroWindow  x:Class="MvxScaffolding.UI.Views.MainWindow"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MvxScaffolding.UI.Views"
        xmlns:viewModels="clr-namespace:MvxScaffolding.UI.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow"
        Icon="../Resources/Images/mvxscaffolding_logo_transparent.png"
        ShowIconOnTitleBar="True"
        Height="600"
        Width="950"
        MinWidth="950"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        TitleForeground="White"
        TitleCharacterCasing="Normal"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MvxScaffolding.UI;component/Styles/MvxScaffoldingTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModels:AppDetailsViewModel}">
                <local:AppDetailsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:PlatformOptionsViewModel}">
                <local:PlatformOptionsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:SummaryViewModel}">
                <local:SummaryView/>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <metro:MetroWindow.RightWindowCommands>
        <metro:WindowCommands>
            <Button>
                <materialDesign:PackIcon Width="22"
                                          Height="22"
                                          Kind="GithubCircle" />
            </Button>
        </metro:WindowCommands>
    </metro:MetroWindow.RightWindowCommands>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                       HorizontalAlignment="Center"
                       Grid.Column="0">App Details</TextBlock>
            <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                       HorizontalAlignment="Center"
                       Grid.Column="1">></TextBlock>
            <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                       HorizontalAlignment="Center"
                       Grid.Column="2">Platforms Options</TextBlock>
            <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                       HorizontalAlignment="Center"
                       Grid.Column="3">></TextBlock>
            <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                       HorizontalAlignment="Center"
                       Grid.Column="4">Summary</TextBlock>
        </Grid>

        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0 0 0 1"/>

        <ContentControl x:Name="Pages" DockPanel.Dock="Right" Content="{Binding SelectedViewModel}" Grid.Row="1"/>

        <StackPanel HorizontalAlignment="Right"  Orientation="Horizontal" Grid.Row="2">

            <Button Style="{StaticResource MaterialDesignRaisedAccentButton}"
                    Width="100"
                    Margin="12 8"
                    Command="{Binding BackCommand}">
                Previous
            </Button>

            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="100"
                    Margin="16"
                    Command="{Binding ForwardCommand}">
                Next
            </Button>
        </StackPanel>

        <StatusBar Grid.Row="3" Name="StatusBar">
            <StatusBarItem Content="0.4.5" ContentStringFormat="{}MvxScaffolding v{0}" Foreground="White"/>
            <Separator Style="{DynamicResource MetroStatusBarSeparator}" Background="White" />
            <StatusBarItem Content="5.6.3" ContentStringFormat="{}MvvmCross v{0}" Foreground="White"/>
        </StatusBar>
    </Grid>
</metro:MetroWindow>
    
