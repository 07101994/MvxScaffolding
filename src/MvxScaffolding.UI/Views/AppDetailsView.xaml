<UserControl
    x:Class="MvxScaffolding.UI.Views.AppDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:MvxScaffolding.UI.ViewModels.Dialogs"
    xmlns:local="clr-namespace:MvxScaffolding.UI.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="950"
    Background="{DynamicResource MaterialDesignPaper}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/MvxScaffolding.UI;component/Styles/MvxScaffoldingTheme.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect SlideInFromRight, Duration=0:0:1.2}">
            <materialDesign:Card
                Width="400"
                Margin="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <StackPanel Margin="16">
                    <TextBlock FontWeight="Bold">Application</TextBlock>
                    <TextBox
                        Margin="0,4,0,0"
                        materialDesign:HintAssist.Hint="Identifier"
                        materialDesign:HintAssist.IsFloating="True"
                        Text="{Binding Options.AppId, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />
                    <TextBox
                        Margin="0,16,0,0"
                        materialDesign:HintAssist.Hint="Display Name"
                        materialDesign:HintAssist.IsFloating="True"
                        Text="{Binding Options.AppName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />
                    <TextBlock Margin="0,16,0,0" FontWeight="Bold">Solution</TextBlock>
                    <DockPanel
                        Grid.Row="0"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Stretch">
                        <ComboBox
                            Width="300"
                            materialDesign:ComboBoxAssist.ClassicMode="true"
                            materialDesign:HintAssist.Hint="Project Grouping"
                            DisplayMemberPath="Value"
                            ItemsSource="{Binding Options.ProjectGroupingOptions}"
                            SelectedValue="{Binding Options.SelectedProjectGrouping}"
                            SelectedValuePath="Key"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                        </ComboBox>
                        <TextBlock Margin="0,8,0,0" HorizontalAlignment="Right">
                            <Hyperlink
                                Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                TextDecorations="None">
                                <Hyperlink.CommandParameter>
                                    <dialogs:SimpleInfoViewModel Title="Project Grouping" Message="The grouping for projects into folders inside of the solution.&#x0a;&#x0a;• Select &quot;Flat&quot; for when you want all projects to be placed at the root of the solution.&#x0a;&#x0a;• Select &quot;Test Group&quot; for when you want all test projects to be placed in a test folder, other projects are placed at the root of the solution.&#x0a;&#x0a;• Select &quot;Platform&quot; if you want projects to be grouped based on their target platform." />
                                </Hyperlink.CommandParameter>
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Kind="Information" />
                            </Hyperlink>
                        </TextBlock>
                    </DockPanel>
                    <DockPanel
                        Grid.Row="1"
                        Margin="0,12,0,8"
                        HorizontalAlignment="Stretch">
                        <TextBlock
                            Width="260"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                            EditorConfig
                        </TextBlock>
                        <ToggleButton
                            Margin="8,0,0,0"
                            HorizontalAlignment="Right"
                            IsChecked="{Binding Options.HasEditorConfig}" />

                        <TextBlock HorizontalAlignment="Right">
                            <Hyperlink
                                Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                Style="{StaticResource MaterialDesignBody1Hyperlink}"
                                TextDecorations="None">
                                <Hyperlink.CommandParameter>
                                    <dialogs:SimpleInfoViewModel
                                        Title="EditorConfig"
                                        Message="Enable to include an EditorConfig file at the root of the solution. EditorConfig is used to define coding styles enforced within Visual Studio."
                                        ReadMoreLink="https://docs.microsoft.com/en-us/visualstudio/ide/create-portable-custom-editor-options" />
                                </Hyperlink.CommandParameter>
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Kind="Information" />
                            </Hyperlink>
                        </TextBlock>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>
        </materialDesign:TransitioningContent>
    </Grid>
</UserControl>
